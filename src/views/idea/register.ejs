<div class="row g-5">
    <div class="col-md-11 col-lg-12">
        <h4 class="mb-3">Create Idea</h4>
        <form class="register-account" action="/idea" method="post" enctype="multipart/form-data" style="margin-top: 2%; margin-bottom: 3%;">
            <div class="row g-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">Title</label>
                <input type="text" class="form-control" id="userName" placeholder="" value="" name="title">
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="submisison" class="form-label">Submission</label>
                <select class="form-select" name="submission">
                    <option value="" selected="" disabled=""></option>
                    <% if(typeof(submissions) !== 'undefined') { %>
                        <% submissions.forEach(value => { %> 
                            <option value="<%= value._id %>"><%= value.name %></option>
                        <% }) %>  
                    <% } %>  
                  </select>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Anonymous Mode</label>
                <select class="form-select" aria-label="Default select example" name="anonymousMode">
                    <option value="false" selected disabled="">Disable</option>
                    <option value="true">Enable</option> 
                </select>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-sm-6">
                <label for="username" class="form-label">Category</label>
                <select multiple class="chosen-select form-select" name="category">
                    <option value="" selected="" disabled=""></option>
                    <% if(typeof(categories) !== 'undefined') { %>
                        <% categories.forEach(value => { %> 
                            <option value="<%= value._id %>"><%= value.name %></option>
                        <% }) %>  
                    <% } %>  
                  </select>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-lg-12">
                <label for="email" class="form-label">Description</label>
                <textarea class="form-control" name="description" rows="3"></textarea>
                <div class="invalid-feedback">
                </div>
            </div>

            <div class="col-lg-12">
                <label for="address" class="form-label">Content</label>
                <textarea class="form-control summernote" name="content" rows="4"></textarea>
                <div class="invalid-feedback">
                </div>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">File</label>
                <input class="form-control" type="file" id="formFile" name="submitFile">
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  Term and Condition
                </label>
            </div>
            <input type="hidden" value="<%= userLoginId %>" name="user">
            <hr class="my-4">
            <div class="col-md-3">
                <button class="w-100 btn btn-success btn-lg" type="submit" style="font-weight: 700;">New Idea</button>
            </div>
            <div class="col-md-3">
                <a class="w-100 btn btn-secondary btn-lg" href="/user-management" type="button" style="font-weight: 700;">Cancel</a>
            </div>
        </form>
    </div>
</div>
